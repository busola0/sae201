<Window
    x:Class="Application.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Application"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Height="530"
    MinWidth="1190"
    mc:Ignorable="d">
    <Window.Resources>

        <DataTemplate x:Key="caseACocher">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>

        <ListView
            x:Name="listViewMaladie"
            Width="300"
            Height="110"
            Margin="262,132,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAACFC4"
            Foreground="#FF223945">

            <ListView.View>
                <GridView>
                    <GridViewColumn CellTemplate="{StaticResource caseACocher}" />
                    <GridViewColumn DisplayMemberBinding="{Binding libelleMaladie}" Header="Maladie" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewMedicament"
            Width="300"
            Height="110"
            Margin="262,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAACFC4"
            Foreground="#FF223945">

            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30" CellTemplate="{StaticResource caseACocher}" />
                    <GridViewColumn DisplayMemberBinding="{Binding libelleMedicament}" Header="Médicament" />
                </GridView>
            </ListView.View>
        </ListView>


        <Image
            Width="238"
            Height="207"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="ZEDOC.png"
            Stretch="Fill" />

        <DataGrid
            x:Name="dataGridAuto"
            Width="875"
            Margin="10,247,0,13"
            HorizontalAlignment="Left"
            AutoGenerateColumns="False"
            Background="#FFAACFC4"
            ItemsSource="{Binding lesAutorisations}"
            OpacityMask="#FFAACFC3">
            <DataGrid.CellStyle>
                <Style />
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding nomMedicament}" Header="Medicament" />
                <DataGridTextColumn Binding="{Binding libelleMaladie}" Header="Maladie" />
                <DataGridTextColumn Binding="{Binding date}" Header="Date" />
                <DataGridTextColumn Binding="{Binding commentaire}" Header="Commentaire" />
            </DataGrid.Columns>
        </DataGrid>

        <Calendar
            x:Name="calendrier"
            Grid.ColumnSpan="2"
            Width="201"
            Height="169"
            Margin="583,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAACFC4"
            Foreground="#FFA03232" />

        <TextBox
            x:Name="commentaire"
            Height="78"
            Margin="789,46,255,0"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Width="253"
            Height="25"
            Margin="784,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            Content="Commentaire (facultatif):" />
        <Button
            Width="120"
            Height="62"
            Margin="980,41,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF4E7D7E"
            Click="AjoutAutorisation"
            Content="Ajouter"
            Foreground="White" />
        <Button
            Width="120"
            Height="62"
            Margin="980,424,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF4E7D7E"
            Click="DelAutorisation"
            Content="Delete"
            Foreground="White" />
        <Image
            Width="246"
            Margin="917,136,0,136"
            HorizontalAlignment="Left"
            Source="medecin.jpg"
            Stretch="Fill" />
    </Grid>
</Window>
